/* pages/gifresult/gifresult.wxss */

page {
  width: 100%;
  background: #f1f1f1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.gif-result {
  width: 100%;
  display: flex;
  margin-top: 36rpx;
  margin-bottom: 30rpx;
  justify-content: center;
}

.gif-url {
  width: 460rpx;
  height: auto;
}

.bottom_fun {
  width: 90%;
  display: flex;
  margin-top: 24px;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.save-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  color: white;
  font-size: 16px;
  background: #ff5555;
  border: 3px #ff5555;
}
.save-hover{
  background: #ff4444;
}

.share-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  color: white;
  font-size: 16px;
  background: #1abbfe;
  border: 3px #1abbfe;
  margin-top: 24rpx;
}

.share-hover{
  background: #5abbfe;
}

.more-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  color: white;
  font-size: 16px;
  background: #ffa200;
  border: 3px #ffa200;
  margin-top: 24rpx;
}
.more-hover{
  background: #eea200;
}