/* pages/gifresult/gifresult.wxss */

page {
  width: 100%;
  background: #f1f1f1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.gif-result {
  width: 100%;
  display: flex;
  margin-top: 36rpx;
  margin-bottom: 30rpx;
  justify-content: center;
}

.gif-url {
  width: 260px;
  height:148px;
}

.bottom_fun {
  width: 90%;
  display: flex;
  margin-top: 24px;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.save-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  color: white;
  font-size: 16px;
  background: #ff5555;
  border: 3px #ff5555;
}
.save-hover{
  background: #ff4444;
}

.share-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  color: white;
  font-size: 16px;
  background: #1abbfe;
  border: 3px #1abbfe;
  margin-top: 24rpx;
}

.share-hover{
  background: #5abbfe;
}

.more-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  color: white;
  font-size: 16px;
  background: #ffa200;
  border: 3px #ffa200;
  margin-top: 24rpx;
}
.more-hover{
  background: #eea200;
}
.hit-show{
  width: 90%;
  background: white;
  border: 3px white;
  border-radius: 4px;
  display: flex;
  margin-top: 60rpx;
  flex-direction: column;
  align-items: left;
}
.hit-text1{
  font-size: 14px;
  padding-left: 20rpx;
  padding-top: 30rpx;
  padding-bottom: 10rpx;
}
.hit-text2{
  font-size: 14px;
  padding-left: 20rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}
.hit-text3{
  font-size: 14px;
  padding-left: 20rpx;
  padding-bottom: 30rpx;
}