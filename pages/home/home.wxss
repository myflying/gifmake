/* pages/home/home.wxss */
page{
  width: 100%;
}
.gif-list {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-left: 1%;
}

.gif-item {
  width: 46%;
  height: auto;
  border: 2px solid #fff;
  border-radius: 2px;
  background-color: #fff;
  box-shadow: 0px 3px 1px #ccc;
  margin: 1%;
}

.gif-img {
  width: 96%;
  height: 108px;
  margin-top: 10px;
  margin-left: 2%;
  margin-right: auto;
  margin-bottom: 0px;
}
.gif-title{
  margin-left: 8px;
  margin-bottom: 8px;
  font-size: 14px;
}
