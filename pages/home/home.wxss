/* pages/home/home.wxss */
page{
  width: 100%;
  background: #eeeeee;
}
.gif-list {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-left: 1%;
  margin-top: 24rpx;
}

.gif-item {
  width: 46%;
  height: auto;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  border: 2px solid #fff;
  border-radius: 3px;
  background-color: #fff;
  box-shadow: 0px 2px 1px #ccc;
  margin: 1%;
  justify-content: center;
  align-items: center;
}

.gif-img {
  width: 96%;
  height: 108px;
  margin-top: 10rpx;
  margin-left: 2%;
  margin-right: auto;
  margin-bottom: 0px;
}
.gif-title{
  font-size: 14px;
  margin: 12rpx;
}
.load_more{
  width: 100%;
  display: flex;
  justify-content: center;
  margin: 10rpx;
}
.load_more_image{
  width: 400rpx;
  height: 160rpx;
  display: flex;
  justify-content: center;
}
.is_end{
  color: #8F8F8F;
  font-size: 14px;
  margin-top: 50rpx;
  margin-bottom: 20rpx;
}
.no-data{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 800rpx;
  margin-top: 20%;
}
.no-data image{
  width: 150px;
  height: 150px;
}
.no-data text{
  font-size: 16px;
  margin-top: 20rpx;
  margin-left: -20rpx;
  color: #aaaaaa;
}